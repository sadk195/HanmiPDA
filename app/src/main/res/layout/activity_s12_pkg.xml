<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround">

    <RelativeLayout
        android:id="@+id/layout_menu_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/step3"
            android:gravity="center"
            android:text="출하관리 > 출하등록 > 포장실적"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_btn"
        android:layout_below="@id/layout_menu_title">

        <LinearLayout
            android:id="@+id/box_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="right|center"
                    android:text="출하 번호"
                    android:textColor="@color/colorBodyTitle"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:weightSum="20">

                    <EditText
                        android:id="@+id/req_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_text"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="date"
                        android:textSize="15dp"
                        android:text="DR20220916000003"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="right|center"
                    android:text="carton 번호"
                    android:textColor="@color/colorBodyTitle"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:weightSum="20">

                    <Spinner
                        android:id="@+id/carton_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="20"
                        android:background="@drawable/bg_text"
                        android:enabled="false"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="date"
                        android:textSize="15dp" />



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="right|center"
                    android:text="LOT 번호"
                    android:textColor="@color/colorBodyTitle"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="7.5"
                    android:paddingLeft="10dp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/img_barcode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/barcode" />

                    <EditText
                        android:id="@+id/lot_no"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="8.5"
                        android:background="@drawable/bg_text_ess"
                        android:gravity="center"
                        android:hint="LOT번호 스캔"
                        android:textColor="@color/colorBodyContent"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lbl_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/box_view"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" 품번  |  품명  |  요청수  |  박스수  |  포장수  |  Carton"
                android:textColor="@color/design_default_color_primary"
                android:textSize="15dp" />

        </LinearLayout>


        <ListView
            android:id="@+id/listPacking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lbl_sub_title"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_box"
            android:listSelector="#e5e5e5"
            android:padding="10dp" />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="9">

        <Button
            android:id="@+id/btn_custom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_btn"
            android:layout_weight="3"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:focusable="false"
            android:gravity="center"
            android:text="수기입력"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="17dp" />
        <Button
            android:id="@+id/btn_lot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn"
            android:focusable="false"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="LOT 내역"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_end"
            android:focusable="false"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="닫기"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

    </LinearLayout>

</RelativeLayout>